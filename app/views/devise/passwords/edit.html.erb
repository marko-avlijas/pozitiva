<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default white-card">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Promjena lozinke</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>
        
        <div class="form-group" style="overflow: auto;"> 
          <%= f.label :password, "Nova lozinka", class: "col-lg-4 control-label" %>
          <div class="col-lg-8"><%= f.password_field :password, :autofocus => true, class: "form-control" %></div>
        </div>
        <div class="form-group" style="overflow: auto;"> 
          <%= f.label :password_confirmation, "Potvrdi novu lozinku", class: "col-lg-4 control-label" %>
          <div class="col-lg-8"><%= f.password_field :password_confirmation, class: "form-control" %></div>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-4 col-lg-8">
            <%= f.submit "Promijeni lozinku", class: "btn btn-primary" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="panel-footer"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>