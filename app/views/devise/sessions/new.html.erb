<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <div class="panel panel-default white-card">
    <div class="panel-heading">
      <h3 class="panel-title text-center">Prijava korisnika</h3>
    </div>
    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {role: "form", class: "form-horizontal" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, "E-mail", class: "col-lg-2 control-label" %>
          <div class="col-lg-10"><%= f.email_field :email, :autofocus => true, class: "form-control" %></div>
        </div>

        <div class="form-group">
          <%= f.label :password, "Lozinka", class: "col-lg-2 control-label" %>
          <div class="col-lg-10"><%= f.password_field :password, class: "form-control" %></div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <div class="checkbox">
                <%= f.check_box :remember_me %> <%= f.label :remember_me, "Zapamti me" %>
              </div>
            </div>
          </div>
        <% end -%>
      
        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit "Sign in", class: "btn btn-primary" %>
          </div>
        </div>
        
      <% end %>
    </div>
    <div class="panel-footer"><%= render "devise/shared/links" %></div>
  
  </div>
</div>
</div>

